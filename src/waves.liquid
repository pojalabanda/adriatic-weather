---
layout: base.html
pagination:
  data: waves
  size: 1
  alias: area
  addAllPagesToCollections: true
permalink: "/{{ area }}/index.html"
area: {{ area }}
title: Smer in vi≈°ina valov
---

<div id="forecast-{{ area }}-" class="forecast">
    <div class="relative">
        {% for image in waves[area].images %}
            <img src="{{ image }}" class="forecast-image hidden w-full h-auto">
        {% endfor %}
        <button id="prevButton-{{ area }}-" class="forecast-button left-0 absolute inset-y-0 w-1/5 h-full bg-transparent flex items-center justify-start" aria-label="Previous"><img src="/assets/arrow-left.svg" alt="Previous" class="w-10 lg:w-20"></button>
        <button id="nextButton-{{ area }}-" class="forecast-button right-0 absolute inset-y-0 w-1/5 h-full bg-transparent flex items-center justify-end" aria-label="Next"><img src="/assets/arrow-right.svg" alt="Next" class="w-10 lg:w-20"></button>
    </div>
    <div class="container mx-auto px-4">
        <div class="flex flex-col sm:flex-row justify-between items-center text-secondary">
            <div>
                <span id="timezoneDifference"></span>
            </div>
            <p>
                Vir napovedi: <a href="{{ waves[area].source }}" target="_blank" rel="noopener noreferrer" class="no-underline border-b-2 border-link hover:bg-link-hover">meteo.hr</a>
            </p>
        </div>
    </div>
</div>
